    <ul>
      <li>access only the POS page</li>
      <li>Username: user@glasstrack.com</li> 
      <li>password: user01 </li>
    </ul>
    </div>
    <h2>Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control rounded" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label font-weight-bold" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control rounded" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "control-label" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
